// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//data model

model User {
  id        Int      @default(autoincrement()) @id
  telegramId     Int   @unique
  name      String?
  email     String?
  documentId Int?
  isAdmin  Boolean  @default(false)
  subscriptions Subscription[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Subscription {
  id        Int      @default(autoincrement()) @id
  userId    Int
  user      User     @relation(fields: [userId], references: [telegramId], onDelete: NoAction)
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [telegramId], onDelete: NoAction)
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, groupId])
}

model Group {
  id        Int      @default(autoincrement()) @id
  telegramId     Int   @unique
  name      String
  subscriptions Subscription[]
  tokens   Token[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Token {
  id        Int      @default(autoincrement()) @id
  token     String   @unique
  groupId   Int
  group     Group    @relation(fields: [groupId], references: [telegramId], onDelete: NoAction)
  subscriptionDurationInDays Int
  redeemed  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
